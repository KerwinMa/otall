<script language="JavaScript">
  function checkSubmit(form){
  	if(form.selfile.value.length==0)
  	{
  		alert("请选择要上传的文件");
		return false;
  	}
	return true;
  }
</script>

<div data-role="page" id="page1">
    <div data-theme="b" data-role="header">
        <a data-role="button" href="/" data-icon="arrow-l" data-iconpos="left"
        class="ui-btn-left">
            返回
        </a>
        <h3>
            项目 - <%= prj.name %> - 上传
        </h3>
    </div>
    <div data-role="content">
		<div data-role="navbar" data-iconpos="left">
            <ul>
                <li>
                    <a href="/p/<%= prj.name %>" data-transition="none" data-theme="" data-icon="">
                        下载
                    </a>
                </li>
                <li>
                    <a href="/up/<%= prj.name %>" data-transition="none" data-theme="" data-icon="" class="ui-btn-active ui-state-persist">
                        上传
                    </a>
                </li>
            </ul>
        </div>
        <form action="" method="POST" enctype="multipart/form-data" data-ajax="false">
            <div data-role="fieldcontain">
                <fieldset data-role="controlgroup">
                    <label for="textinput1">
                        选择文件
                    </label>
                    <input name="selfile" id="textinput1" placeholder="" value="" type="file">
                </fieldset>
            </div>
            <div data-role="fieldcontain">
                    <label for="selectmenu1">
                        选择iOS AppID
                    </label>
					<br>
                    <select name="appid" id="selectmenu1">
						<%- partial('appid', prj.appleAppIDs) %>
						<option value="" >
						    无
						</option>
                    </select>
						
            </div>
            <div data-role="fieldcontain">
                <fieldset data-role="controlgroup">
                    <label for="textinput2">
                        文件重命名为
                    </label>
                    <input name="fileNewName" id="textinput2" placeholder="不填则使用原文件名" value="" type="text">
                </fieldset>
            </div>
            <div data-role="fieldcontain">
                <fieldset data-role="controlgroup">
                    <label>
                        选择分组
                    </label>
                    <select name="group" id="selectmenu2">
						<%- partial('filegroup', prj.groups) %>
                    </select>
                            
                </fieldset>
            </div>
            <div data-role="fieldcontain">
                <fieldset data-role="controlgroup">
                    <label for="textinput3">
                        备注
                    </label>
                    <textarea name="comment" id="textinput3" placeholder="" value=""></textarea>
                </fieldset>
            </div>
			<input data-theme="b" data-icon="star" data-iconpos="right" value="上传" type="submit" onClick="return checkSubmit(this.form)">
        </form>
    </div>
</div>

