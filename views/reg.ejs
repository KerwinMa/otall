<!-- Home -->
<div data-role="page" id="page1">
    <div data-theme="b" data-role="header">
        <a data-role="button" href="/" data-icon="home" data-iconpos="left"
        class="ui-btn-left">
		首页
        </a>
        <h3>
            OTA Server - 注册
        </h3>
    </div>
    <div data-role="content">
        <% if (success) { %>
		<ul data-role="listview" data-divider-theme="e" data-inset="true">
            <li data-role="list-divider" role="heading">
                <%= success %>
            </li>
        </ul>
        <% } %>
        <% if (error) { %>
		<ul data-role="listview" data-divider-theme="e" data-inset="true">
            <li data-role="list-divider" role="heading">
                <%= error %>
            </li>
        </ul>
        <% } %>
        <form method="POST" data-ajax="false">
            <div data-role="fieldcontain">
                <fieldset data-role="controlgroup">
                    <label for="username">
                        用户名
                    </label>
                    <input name="username" id="username" placeholder="" value="" type="text">
                </fieldset>
            </div>
            <div data-role="fieldcontain">
                <fieldset data-role="controlgroup">
                    <label for="pwd">
                        密码
                    </label>
                    <input name="pwd" id="pwd" placeholder="" value="" type="password">
                </fieldset>
            </div>
            <div data-role="fieldcontain">
                <fieldset data-role="controlgroup">
                    <label for="pwd2">
                        重复密码
                    </label>
                    <input name="pwd2" id="pwd2" placeholder="" value="" type="password">
                </fieldset>
            </div>
			<input data-theme="b" data-icon="star" data-iconpos="right" value="注册" type="submit">
        </form>	
    </div>
</div>